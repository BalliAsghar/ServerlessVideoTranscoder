{
   "printWidth": 80,
   "tabWidth": 3,
   "useTabs": false,
   "semi": true,
   "singleQuote": true,
   "trailingComma": "all",
   "bracketSpacing": true,
   "arrowParens": "avoid",
   "requirePragma": false,
   "insertPragma": false,
   "proseWrap": "preserve",
   "endOfLine": "lf",
   "overrides": [
      {
         "files": "*.json",
         "options": {
            "printWidth": 200
         }
      }
   ]
}
